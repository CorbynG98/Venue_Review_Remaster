{
  "testEnvironment": "node",
  "preset": "ts-jest",
  "coveragePathIgnorePatterns": ["/node_modules/", "/dist", "/public"],
  "globalSetup": "<rootDir>/__test__/config/pretest.config.ts",
  "transform": {
    "^.+\\.ts?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.build.json"
      }
    ]
  }
}
