{
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/interceptors/*.json",
    "src/**/auth_slice.ts",
    "src/components/NotyfComponent.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "allowSyntheticDefaultImports": true,
  "resolveJsonModule": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
